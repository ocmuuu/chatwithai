      // æ ¹æ®æä¾›å•†æ„å»ºè¯·æ±‚å¤´
      const headers = this.buildRequestHeaders(config.apiKey);
      
      const options: http.HttpRequestOptions = {
        method: http.RequestMethod.POST,
        header: headers,
        extraData: JSON.stringify(requestBody),
